@model Multipleİmage.Models.Product

@{
	ViewData["Title"] = "Details";
}

<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div class="s_Product_carousel">
					@foreach (var item in Model.ProductPhotos)
					{
						<div class="single-prd-item">
							<img class="img-fluid" src="~/mimg/@item.AllPhotos" alt="" height="300" width="300">
						</div>
						
					}

				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@Model.ProductName</h3>
					<h2>@Model.Price ₺</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>Kategori</span> : Bilinmiyor!</a></li>
						<li><a href="#"><span>Stok durumu</span> : Bilinmiyor!</a></li>
					</ul>
					<p>
						@Model.Description
					</p>
				
					
				</div>
			</div>
		</div>
	</div>
</div>